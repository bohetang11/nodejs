<%- include('./common/header.ejs')%>
<!-- 文章区域 -->
<h1 class="text-center">文章列表</h1>
<div class="container">
    <div class="list-group">
        <% article.forEach(item=>{ %>
           
            <a class="list-group-item" href="/article/info/<%=item.id%>">
                <%=item.title%>
                <span class="badge" style="background-color: #5bc0de;"><%=item.ctime%></span>
                <span class="badge" style="background-color: #f0ad4e;"><%=item.nickname%></span>
            </a>

        <% }) %>
    </div>
</div>
<%- include('./common/footer.ejs')%>